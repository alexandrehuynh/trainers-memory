# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Backend API Configuration
NEXT_PUBLIC_BACKEND_URL=https://trainers-memory.onrender.com
# Optional API path prefix if your API uses a base path (e.g. "/api/v1")
# Leave empty if your API endpoints are at the root level
NEXT_PUBLIC_API_PATH_PREFIX=""

# Development Configuration
# Set to true to use localhost backend instead of production
NEXT_PUBLIC_USE_LOCAL_BACKEND=false
# Set to true to use Supabase user metadata for roles instead of backend API
NEXT_PUBLIC_USE_FALLBACK_ROLES=false
# API key for development/testing
NEXT_PUBLIC_API_KEY=test_key_12345

# Site URL for Auth Redirects
NEXT_PUBLIC_SITE_URL=https://trainers-memory.vercel.app

# Directory Configuration
NEXT_PUBLIC_SRC_DIR=./src 